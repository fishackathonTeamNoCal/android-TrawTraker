<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trawtracker.Start_PhotoLocation"
    tools:ignore="MergeRootFrame" xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:windowSoftInputMode="stateHidden" >

	       <LinearLayout
	           android:id="@+id/headerLayout"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginStart="0dp"
	           android:background="#50ff6600"
	           android:orientation="horizontal" >

	           <ImageView
	               android:id="@+id/doneButton"
	               android:layout_width="wrap_content"
	               android:layout_height="match_parent"
	               android:layout_marginLeft="20dp"
	               android:layout_marginTop="5dp"
	               android:src="@drawable/ic_launcher" />

	           <Button
	               android:id="@+id/goToReport"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="10dp"
	               android:text="Take Photo" />

	           <TextView
	               android:id="@+id/photo_text"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="30dp"
	               android:layout_marginTop="5dp"
	               android:layout_weight="0.2"
	               android:focusable="false"
	               android:focusableInTouchMode="false"
	               android:text="no photo yet" />

	       </LinearLayout>
            
            <LinearLayout
                android:id="@+id/vesselLinLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:windowSoftInputMode="stateHidden" >

                <TextView
                    android:id="@+id/vesselType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="Vessel Description" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:layout_marginTop="2dp"
                    android:background="#FF909090" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vesselInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/Tittle"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/txtVesselActivity"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="activity (fishing, anchor, etc.)"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/txtVesselId"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="vessel ID (#)"
                    android:maxLines="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/txtDirection"
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="direction moving"
                        android:maxLines="1" >

                        <requestFocus />
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/rlDirection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="60.73" >

                        <ImageButton
                            android:id="@+id/btnNW"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_launcher" />

                        <ImageButton
                            android:id="@+id/btnN"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_toRightOf="@+id/btnNW"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_launcher" />

                        <ImageButton
                            android:id="@+id/btnNE"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_toRightOf="@id/btnN"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_launcher" />

                        <ImageButton
                            android:id="@+id/btnW"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_launcher" />

                    </RelativeLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/txtComments"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="comments"
                    android:maxLines="1" />

                <ListView
                    android:id="@+id/lv1"
                    android:layout_width="290dp"
                    android:layout_height="166dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:choiceMode="singleChoice"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLTimeDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/titleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="Location Description" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:layout_marginTop="2dp"
                    android:background="#FF909090" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateTimeDetail"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/txtLocation"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:hint="describe location"
                    android:maxLength="10"
                    android:maxLines="1" />
            </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dateTimeDetail"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical" >

                <TextView
                    android:id="@+id/titleDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="Date / Time" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:layout_marginTop="2dp"
                    android:background="#FF909090" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleDateTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateTimeDetail"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/txtDateTime"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:hint="DD/MM/YY HH:MM"
                    android:maxLength="10"
                    android:maxLines="1" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDateTime"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/doneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
        </LinearLayout>
        <!-- Till here i want to put it into a scroll view -->
    </ScrollView>

</RelativeLayout>
