<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trawtracker.MainInfo"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/txtInfoBlurb"
        android:layout_width="280dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="#50ff6600"
        android:text="@string/InfoBlurb" />
    
     <TextView
         android:id="@+id/txtAbout"
         android:layout_width="280dp"
         android:layout_height="80dp"
         android:layout_below="@+id/txtInfoBlurb"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:gravity="center"
         android:text="@string/txtAbout" />
     
     <Button
        android:id="@+id/goToReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="reportScreen"
        android:text="Make New Report" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="other..." />

</RelativeLayout>
